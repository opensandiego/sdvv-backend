{
  "name": "sdvv-backend-nest",
  "version": "0.0.1",
  "description": "San Diego Voters Voice backend and data store",
  "engines": {
    "node": "20.x"
  },
  "author": "Open San Diego",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run build:web && npm run build:updater",
    "build:web": "nest build sdvv-backend-nest",
    "build:updater": "nest build update-command",
    "preinitialize:data": "npm run build:updater",
    "initialize:data": "export COMMAND=initialize-data && node dist/apps/update-command/main",
    "db:migration:run": "npm run typeorm migration:run -- -d ./orm-data-source.ts",
    "db:migration:revert": "npm run typeorm migration:revert -- -d ./orm-data-source.ts",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:web:dev": "nest start sdvv-backend-nest --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod:web": "node dist/apps/sdvv-backend-nest/main",
    "start:prod:updater": "node dist/apps/update-command/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/sdvv-backend-nest/test/jest-e2e.json",
    "typeorm": "typeorm-ts-node-esm"
  },
  "dependencies": {
    "@apollo/client": "^3.7.11",
    "@apollo/server": "^4.6.0",
    "@nestjs/apollo": "^11.0.4",
    "@nestjs/axios": "^2.0.0",
    "@nestjs/bull": "^0.6.3",
    "@nestjs/common": "^9.4.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.4.0",
    "@nestjs/graphql": "^11.0.4",
    "@nestjs/mapped-types": "^1.2.0",
    "@nestjs/platform-express": "^9.4.0",
    "@nestjs/schedule": "^2.2.1",
    "@nestjs/serve-static": "^3.0.1",
    "@nestjs/terminus": "^9.2.2",
    "@nestjs/typeorm": "^9.0.1",
    "@types/node": "^20.14.8",
    "axios": "^1.3.5",
    "bull": "^4.10.4",
    "cache-manager": "^5.2.0",
    "cache-manager-ioredis-yet": "^1.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cross-fetch": "^3.1.5",
    "currency.js": "^2.0.4",
    "dotenv": "^16.0.3",
    "expose-gc": "^1.0.0",
    "graphql": "^16.6.0",
    "nest-winston": "^1.9.1",
    "nestjs-console": "^8.0.0",
    "pg": "^8.10.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^4.4.1",
    "rxjs": "^7.8.0",
    "ts-morph": "^17.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.12",
    "typescript": "^5.0.3",
    "winston": "^3.8.2",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.0/xlsx-0.20.0.tgz"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.3.0",
    "@nestjs/schematics": "^9.1.0",
    "@nestjs/testing": "^9.4.0",
    "@types/cron": "^2.0.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/sdvv-database(|/.*)$": "<rootDir>/libs/sdvv-database/src/$1",
      "^@app/efile-api-data(|/.*)$": "<rootDir>/libs/efile-api-data/src/$1"
    }
  }
}
